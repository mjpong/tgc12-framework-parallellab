{{#extends 'base'}}

{{#block 'content'}}
<h1>Deleting Poster: {{poster.name}}</h1>
<form method="POST">
    <div class="alert alert-danger">
        <p>Are you sure you want to delete {{poster.name}}?</p>
        <input type="submit" value="Confirm" class="btn btn-danger"/>
        <a href="/posters" class="btn btn-success">Cancel</a>
    </div>
</form>
{{/block}}
{{/extends}}