{{#extends 'base'}}

{{#block 'content'}}

<h1>Posters</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Cost</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    {{#each posters}}
    <tr>
        <td>
            {{this.id}}
        </td>
        <td>
            {{this.title}}
        </td>
        <td>
            {{this.cost}}
        </td>
        <td>
            {{this.description}}
        </td>
        <td>
            <a href='/posters/{{this.id}}/update' class="btn btn-primary btn-sm">Edit</a>
            <a href='/posters/{{this.id}}/delete' class="btn btn-danger btn-sm">Delete</a>
        </td>




    </tr>

    {{/each}}

</table>

{{/block}}

{{/extends}}